
- if current_user
  %div.grid_12.prefix_2
    %h1 Listing posts

    %table
      %tr
        %th Title
        %th Date
        %th Actions

      - @posts.each do |post|
        %tr
          %td= post.title
          %td= post.created_at.strftime("%d/%m/%Y")
          %td
            = link_to 'Show', post
            = link_to 'Edit', edit_post_path(post)
            = link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete

    %br

    = link_to 'New Post', new_post_path
- else
  %div.grid_12.prefix_2
    - if @posts.count > 0
      - @posts.each do |post|
        %h2
          %span.date= post.created_at.strftime("%d/%m/%Y")
          = link_to post.title, post
    - else
      %h2 Aucun article pour le moment.